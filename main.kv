<ContentNavigationDrawer>:

    ScrollView:
        BoxLayout:
            orientation:"vertical"    
            AnchorLayout:
                anchor_x: "left"
                anchor_y:"top"
                Image:
                    id: avatar
                    # size_hint:None,None
                    # size: 100,100
                    source: "indir.jpg"

            MDList:
                id:container

                TwoLineIconListItem:
                    text: "Screen 1"
                    secondary_text: "Secondary text here"
                    on_press:
                        root.nav_drawer.set_state("close")
                        root.screen_manager.current = "scr 1"
                    IconLeftWidget:
                        icon: "youtube"
                

                TwoLineIconListItem:
                    text: "Screen 2"
                    secondary_text: "Secondary text here"
                    on_press:
                        root.nav_drawer.set_state("close")
                        root.screen_manager.current = "scr 2"
                    IconLeftWidget:
                        icon:"twitter"

<A>:
    Screen:

        MDToolbar:
            id: toolbar
            pos_hint: {"top": 1}
            elevation: 10
            title: "MDNavigationDrawer"
            left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]

        NavigationLayout:
            x: toolbar.height

            ScreenManager:
                id: screen_manager

                Screen:
                    name: "scr 1"

                    MDLabel:
                        text: "Screen 1"
                        halign: "center"

                Screen:
                    name: "scr 2"

                    MDLabel:
                        text: "Screen 2"
                        halign: "center"

            MDNavigationDrawer:
                id: nav_drawer

                ContentNavigationDrawer:
                    screen_manager: screen_manager
                    nav_drawer: nav_drawer