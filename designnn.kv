<Favorite>:
    BoxLayout:
        orientation:"vertical"
        MDScreen: #sayfanın üstünde bulunan butonların kısmı
            size_hint_y:None
            size_hint_y:.1
            MDIconButton:
                id:icons4
                on_press:app.switch_theme_style()
                icon: 'white-balance-sunny'
                pos_hint: {'center_x': .03}
            MDIconButton:
                on_press:root.manager.current = "store_id"
                on_press: root.manager.transition.duration = 0
                # on_press: root.manager.transition.direction = 'right'
                icon: 'library-music-outline'
                # md_bg_color: 1, 1, 0, 1
                pos_hint: {'center_x': 0.2}
            MDIconButton:
                on_press:root.manager.current = "download_id"
                on_press: root.manager.transition.duration = 0
                # on_press: root.manager.transition.direction = 'right'
                # md_bg_color: app.theme_cls.primary_light
                icon: 'download-outline'
                pos_hint: {'center_x': 0.5}
            MDIconButton:
                # on_press:root.manager.current = "favorite_id"
                icon: 'star'
                pos_hint: {'center_x': 0.8}

        BoxLayout:
            orientation:"vertical"
            Image:
                source:"instagram.png"
            MDLabel:
                text:"You don't have any favorites!"
                halign:"center"
                valign:"center"




    MDFloatingActionButtonSpeedDial:
        data: root.data
        rotation_root_button: True
        hint_animation: True
        md_bg_color: 0, 0, 0, 1
        specific_text_color: 0,0,0,1



