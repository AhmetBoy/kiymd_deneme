<ScreenManagement>:
    id: "scrn_mngr"
    Download:
        name: 'download_id'
    Store:
        name: 'store_id'
    Favorite:
        name: 'favorite_id'





<Store>:

    BoxLayout:
        orientation:"vertical"
        # pos_hint:{"center_y":.9}

        MDScreen: #sayfanın üstünde bulunan butonların kısmı
            size_hint_y:None
            size_hint_y:.1
            MDIconButton:
                id:icons4
                on_press:app.switch_theme_style()
                icon: 'white-balance-sunny'
                pos_hint: {'center_x': .03}
            MDIconButton:
                # on_press:root.manager.current = "store_id"
                on_press: root.manager.transition.duration
                icon: 'library-music'
                # md_bg_color: 1, 1, 0, 1
                pos_hint: {'center_x': 0.2}
            MDIconButton:
                on_press:root.manager.current = "download_id"
                on_press: root.manager.transition.duration = 0
                # md_bg_color: app.theme_cls.primary_light
                icon: 'download-outline'
                pos_hint: {'center_x': 0.5}
            MDIconButton:
                on_press:root.manager.current = "favorite_id"
                on_press: root.manager.transition.duration = 0
                # on_press: root.manager.transition.direction = 'left'
                icon: 'star-outline'
                pos_hint: {'center_x': 0.8}
        ScrollView:
            # size_hint_y:.7
            pos_hint:{"x":0,"y":.11}
            # do_scroll_x:False
            # do_scroll_y:True
            GridLayout:
                id:grd_storePage
                cols:1
                size_hint_y:None # önce boyut sıfırlanmassa scrollview olmaz
                # size:root.width,root.height #orjinal boyutu yapar
                height:self.minimum_height
                # row_force_default:True
                row_default_height:150 #her bir row un uzunlugunu belirliyor
                padding:10,10 #birincisi sol ve sagdan boşluk koyar ikicisi alttan ve üstten boşluk koyar
                spacing:10
                




<Download>:
    MDBoxLayout:  
        orientation:"vertical"  
        MDScreen: #sayfanın üstünde bulunan butonların kısmı
            size_hint_y:None
            size_hint_y:.1
            MDIconButton:
                id:icons4
                on_press:app.switch_theme_style()
                icon: 'white-balance-sunny'
                pos_hint: {'center_x': .03}
            MDIconButton:
                id:icons1
                on_press:root.manager.current = "store_id"
                on_press: root.manager.transition.duration = 0
                icon: 'library-music-outline'
                pos_hint: {'center_x': 0.2}
            MDIconButton:
                id:icons2
                on_press:root.creat_blog()
                # on_press: root.manager.transition.direction = 'left'
                icon: 'download'
                pos_hint: {'center_x': 0.5}
            MDIconButton:
                id:icons3
                on_press:root.manager.current = "favorite_id"
                on_press: root.manager.transition.duration = 0
                # on_press: root.manager.transition.direction = 'left'
                icon: 'star-outline'
                pos_hint: {'center_x': 0.8}
        MDTextField:
            id:search_word
            text:"arogfirinnerede"
            hint_text: "URL or Name"
            mode: "fill"
            icon_right: "magnify"
            icon_right_color:app.theme_cls.primary_color
            on_text_validate:root.make_search_id()

        ScrollView:
            # size_hint_y:.7
            pos_hint:{"x":0,"y":.11}
            # do_scroll_x:False
            # do_scroll_y:True
            GridLayout:
                id:grd_downloadPage
                cols:1
                size_hint_y:None # önce boyut sıfırlanmassa scrollview olmaz
                # size:root.width,root.height #orjinal boyutu yapar
                height:self.minimum_height
                # row_force_default:True
                row_default_height:200 #her bir row un uzunlugunu belirliyor
                padding:10,10 #birincisi sol ve sagdan boşluk koyar ikicisi alttan ve üstten boşluk koyar
                spacing:10
                

       

        



