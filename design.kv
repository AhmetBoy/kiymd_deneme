# #:import ScrollView kivy.uix.scrollview
<ScreenManagement>:
    id: "scrn_mngr"
    AdminPage:
        name: 'admin_id'
    UserPage:
        name: 'user_id'
    UserPage2:
        name: 'user_id2'


<AdminPage>:
    MDBoxLayout:  
        orientation:"vertical"  

        MDToolbar:
            id:icons
            title: "Explore"
            left_action_items: [["white-balance-sunny", lambda x: app.switch_theme_style()]]
            right_action_items: [["card-search", lambda x: root.callback(),"search"],["dots-vertical", lambda x: root.callback(),"secenekler"]]
            # elevation: 0
            opposite_colors: True
            md_bg_color:0.2,0.2,0.2,1
            
        MDScreen: #sayfanın üstünde bulunan butonların kısmı
            # size_hint_y:None
            size_hint_y:.09
            MDIconButton:
                # on_press:app.theme_cls.theme_style = "Dark"
                id:icons1
                on_press:root.manager.current = "admin_id"
                icon: 'compass'
                # md_bg_color: 1, 1, 0, 1
                pos_hint: {'center_x': 0.2}
            MDIconButton:
                id:icons2
                on_press:root.manager.current = "user_id"
                # md_bg_color: app.theme_cls.primary_light
                icon: 'star-outline'
                pos_hint: {'center_x': 0.5}
            MDIconButton:
                id:icons3
                on_press:root.manager.current = "user_id2"
                icon: 'heart-outline'
                pos_hint: {'center_x': 0.8}


       

        ScrollView:
            # size_hint_y:.7
            pos_hint:{"x":0,"y":.11}
            # do_scroll_x:False
            # do_scroll_y:True
            GridLayout:
                cols:2
                size_hint_y:None # önce boyut sıfırlanmassa scrollview olmaz
                # size:root.width,root.height #orjinal boyutu yapar
                height:self.minimum_height
                # row_force_default:True
                row_default_height:220 #her bir row un uzunlugunu belirliyor
                padding:20,4 #birincisi sol ve sagdan boşluk koyar ikicisi alttan ve üstten boşluk koyar
                spacing:20
                MDCard:
                    md_bg_color:.5,.2,.6,.3 #arka plan fotografın rengine göre degiştirilecek
                    padding:10
                    Image:
                        allow_stretch:True
                        keep_ratio:False
                        source:"b.jpg"
                MDCard:
                    md_bg_color:0,0,0,1
                    padding:10
                    Image:
                        allow_stretch:True
                        keep_ratio:False
                        source:"bb.jpg"
                MDCard:
                    padding:10
                    Image:
                        source:"bbb.jpg"
                MDCard:
                    padding:10
                    Image:
                        source:"all.png"
                MDCard:
                    padding:10
                    Image:
                        source:"youtube.png"
                MDCard:
                    padding:10
                    Image:
                        source:"ins_new.png"



    MDFloatingActionButtonSpeedDial:
        data: root.data
        rotation_root_button: True
        hint_animation: True
        # bg_color_root_button:0,0,0,1
        # color_icon_root_button:1,1,1,1
        # specific_text_color: 0,0,0,1
        callback:root.callback





<UserPage>:

    BoxLayout:
        orientation:"vertical"
        size_hint_y:None
        pos_hint:{"center_y":1}
        MDScreen: #sayfanın üstünde bulunan butonların kısmı
            
            MDIconButton:
                on_press:root.manager.current = "admin_id"
                icon: 'compass-outline'
                # md_bg_color: 1, 1, 0, 1
                pos_hint: {'center_x': 0.2}
            MDIconButton:
                on_press:root.b()
                # md_bg_color: app.theme_cls.primary_light
                icon: 'star'
                pos_hint: {'center_x': 0.5}
            MDIconButton:
                on_press:root.manager.current = "user_id2"
                icon: 'heart-outline'
                pos_hint: {'center_x': 0.8}
    ScrollView:
        size_hint_y:.9
        GridLayout:
            cols:2
            id:products
            size_hint_y:None # önce boyut sıfırlanmassa scrollview olmaz
            # size:root.width,root.height #orjinal boyutu yapar
            height:self.minimum_height
            # row_force_default:True
            row_default_height:220 #her bir row un uzunlugunu belirliyor
            padding:20,4 #birincisi sol ve sagdan boşluk koyar ikicisi alttan ve üstten boşluk koyar
            spacing:20
           





<UserPage2>:
    BoxLayout:
        orientation:"vertical"
        MDScreen: #sayfanın üstünde bulunan butonların kısmı
            size_hint_y:None
            size_hint_y:.09
            MDIconButton:
                on_press:root.manager.current = "admin_id"
                icon: 'compass-outline'
                # md_bg_color: 1, 1, 0, 1
                pos_hint: {'center_x': 0.2}
            MDIconButton:
                on_press:root.manager.current = "user_id"
                # md_bg_color: app.theme_cls.primary_light
                icon: 'star-outline'
                pos_hint: {'center_x': 0.5}
            MDIconButton:
                on_press:root.manager.current = "user_id2"
                icon: 'heart'
                pos_hint: {'center_x': 0.8}

        BoxLayout:
            orientation:"vertical"
            Image:
                source:"folder1.jpg"
            MDLabel:
                text:"You don't have any favorites!"
                halign:"center"
                valign:"center"




    MDFloatingActionButtonSpeedDial:
        data: root.data
        rotation_root_button: True
        hint_animation: True
        md_bg_color: 0, 0, 0, 1
        specific_text_color: 0,0,0,1