<ScreenManagement>:
    id: "aa"
    AdminPage:
        name: 'admin_id'
    UserPage:
        name: 'user_id'

<AdminPage>:
    MDBoxLayout:  
        orientation:"vertical"  

        MDToolbar:
            title: "MDTopAppBar"
            # elevation: 10
            left_action_items: [["white-balance-sunny", lambda x: root.callback(),"menu"]]
            right_action_items: [["card-search", lambda x: root.callback(),"search"],["dots-vertical", lambda x: root.callback(),"secenekler"]]
            opposite_colors: True
            md_bg_color: 1, 1, 1, 1
            specific_text_color: 0,0,0,1
            
        MDScreen: #sayfanın üstünde bulunan butonların kısmı
            # size_hint_y:None
            size_hint_y:.09
            MDIconButton:
                icon: 'compass'
                # md_bg_color: 1, 1, 0, 1
                pos_hint: {'center_x': 0.2}
            MDIconButton:
                # md_bg_color: app.theme_cls.primary_light
                icon: 'star'
                pos_hint: {'center_x': 0.5}
            MDIconButton:
                icon: 'heart'
                pos_hint: {'center_x': 0.8}


       

        ScrollView:
            # size_hint_y:.7
            pos_hint:{"x":0,"y":.11}
            do_scroll_x:False
            do_scroll_y:True
            GridLayout:
                cols:2
                size_hint_y:None # önce boyut sıfırlanmassa scrollview olmaz
                # size:root.width,root.height #orjinal boyutu yapar
                height:self.minimum_height
                # row_force_default:True
                row_default_height:220 #her bir row un uzunlugunu belirliyor
                padding:20,4 #birincisi sol ve sagdan boşluk koyar ikicisi alttan ve üstten boşluk koyar
                spacing:20
                MDCard:
                    md_bg_color:.5,.2,.6,.3 #arka plan fotografın rengine göre degiştirilecek
                    padding:10
                    Image:
                        allow_stretch:True
                        keep_ratio:False
                        source:"b.jpg"
                MDCard:
                    md_bg_color:0,0,0,1
                    padding:10
                    Image:
                        allow_stretch:True
                        keep_ratio:False
                        source:"bb.jpg"
                MDCard:
                    padding:10
                    Image:
                        source:"bbb.jpg"
                MDCard:
                    padding:10
                    Image:
                        source:"all.png"
                MDCard:
                    padding:10
                    Image:
                        source:"youtube.png"
                MDCard:
                    padding:10
                    Image:
                        source:"ins_new.png"
                # MDCard:
                # MDCard:
                # MDCard:
                # MDCard:
                # MDCard:
                # MDCard:
                # MDCard:
                # MDCard:
                # MDCard:
                # MDCard:
                # MDCard:
                # MDCard:
                # MDCard:
                # MDCard:



    MDFloatingActionButtonSpeedDial:
        data: root.data
        rotation_root_button: True
        hint_animation: True
        md_bg_color: 0, 0, 0, 1
        specific_text_color: 0,0,0,1



