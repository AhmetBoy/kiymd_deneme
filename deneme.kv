#:import Factory kivy.factory.Factory
                
<Myt>:
    Button:
        text: 'Open popup'
        on_release: Factory.MyPopup().open()

<MyPopup@Popup>:
    size_hint_y:.3
    pos_hint:{"top":0.3}
    title:"hello world"
    BoxLayout:
        orientation:"vertical"
        BoxLayout:
            orientation:"vertical"
            size_hint:None,None
            size_hint:1,.1
            BoxLayout:
                Label:
                    size_hint_x:.1
                    text: str(slider.value)
                Slider:
                    id: slider
                    min: 0
                    max: 100
                    step:1
                Label:
                    size_hint_x:.1
                    text: str(slider.value)
            BoxLayout:
                MDIconButton:
                    icon:"rewind-10"
                    text:"geri sar"
                MDIconButton:
                    icon:"play"
                    text:"durdur/oynat"
                MDIconButton:
                    icon:"fast-forward-10"
                    text:"ileri sar"

                MDIconButton:
                    icon:"location-exit"
                    on_release:root.dismiss()
                    text:"çıkış"