<Myt>:
    BoxLayout:
        orientation:"vertical"
        padding:25
        spacing:10
        canvas.before:
            Color:
                rgba: 1,1,1,1
            Rectangle:
                size: self.size
                pos: self.pos
        # MDBoxLayout:
