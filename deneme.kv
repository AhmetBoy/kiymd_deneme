        BoxLayout:
            orientation:"vertical"
            size_hint_y:None
            height:90
            spacing:30
            BoxLayout:
                MDLabel:
                    text:"KentKart numarasını giriniz."
                    halign: "center"


            BoxLayout:
                size_hint_y:None
                height:30
                spacing:5
                MDTextField:
                    id:kentkart_id
                    pos_hint: {"center_y": .4}
                    hint_text: "XXXXX-XXXXX"
                    max_text_length: 10


                MDRaisedButton:
                    text: "Sorgula"
                    md_bg_color: 0, 1, 1, 1
                    on_press:root.kart_num()
        BoxLayout:
            orientation:"vertical"
            MDLabel:
                id:bakiye
                halign: "center"
                theme_text_color: "Primary"
                font_style:"Subtitle1"
